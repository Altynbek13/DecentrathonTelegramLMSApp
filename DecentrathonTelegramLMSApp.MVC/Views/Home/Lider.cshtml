@{
    ViewData["Title"] = "Lider Page";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Рейтинг студентов</title>
    <link rel="stylesheet" href="~/css/lider.css">
</head>
<body>
    <div class="container">
        <header>
            <h2>ЗАЛ СЛАВЫ BASE64</h2>
