@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/index.css">
</head>
<body>
    <div class="app-container">
        <header class="app-header">
            <img src="~/images/logo.png" alt="LMS Logo" class="logo">
            <h1>BASE64</h1>
            <p>Ваши курсы</p>
        </header>
        <section class="main-content">
            <div class="course">
                <h2>Курс 1: Основы программирования</h2>
                <div class="progress-container">
                    <div class="progress-bar" style="width: 60%;"></div>
                </div>
                <a class="learn-button" asp-controller="Home" asp-action="Course">Учиться</a>
            </div>
            <div class="course">
                <h2>Курс 2: Веб-разработка</h2>
                <div class="progress-container">
                    <div class="progress-bar" style="width: 40%;"></div>
                </div>
                <button class="learn-button">Учиться</button>
            </div>
            <div class="course">
                <h2>Курс 3: Машинное обучение</h2>
                <div class="progress-container">
                    <div class="progress-bar" style="width: 80%;"></div>
                </div>
                <button class="learn-button">Учиться</button>
            </div>
        </section>
    </div>
</body>
</html>
